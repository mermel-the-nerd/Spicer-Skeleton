<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Substitution Schedule</title>
</head>
<body>
    <table id="table">
      <thead>
        <tr>
          <th>Original Teacher</th>
          <th>Substitute Teacher</th>
          <th>Class Name</th>
          <th>Block</th>
          <th>Date</th>
          <th>Notes</th>
        </tr>
      </thead>
      <tbody>
        <% subEvents.forEach(event => { %>
          <tr>
            <td><%= event.originalTeacherName %></td>
            <td><%= event.subbingTeacherName %></td>
            <td><%= event.className %></td>
            <td><%= event.block %></td>
            <td><%= event.date %></td>
            <td><%= event.notes %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>

    <!-- Button to generate PDF -->
    <button id="generatePdfBtn">Generate PDF</button>

    <!-- Home button -->
    <button onclick="location.href='/'">Home</button>

    <script>
      document.getElementById("generatePdfBtn").addEventListener("click", async () => {
        const tableHTML = document.getElementById("table").outerHTML;

        const response = await fetch("/pdf", {
          method: "POST",
          headers: {
            "Content-Type": "application/json"
          },
          body: JSON.stringify({ table: tableHTML })
        });

        if (response.ok) {
          const blob = await response.blob();
          const link = document.createElement("a");
          link.href = URL.createObjectURL(blob);
          link.download = "substitution_schedule.pdf";
          document.body.appendChild(link);
          link.click();
          document.body.removeChild(link);
        } else {
          console.error("Error generating PDF");
        }
      });
    </script>
</body>
</html>
